{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "./support/**/*.ts",
    "./steps/registration.steps.ts",
    "./steps/hooks.ts",
    "./sdk/**/*.ts",
    "./adapters/auth.*.ts",
    "./adapters/base.adapter.ts",
    "./adapters/registration.adapter.ts",
    "./constants/**/*.ts",
    "./page-objects/**/*.ts",
    "./helpers/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
